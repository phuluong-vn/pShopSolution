@model PShopSolution.ViewModels.System.Users.DeleteUserRequest

@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">Danh sách người dùng</a></li>
        <li class="breadcrumb-item active">Xóa người dùng</li>
    </ol>
    <div class="card col-md-1" style="padding:0; margin-bottom:10px">
        <a class="btn btn-success" asp-action="Index" asp-controller="User"><i class="fa fa-arrow-left"></i> Trở lại </a>
    </div>
    <dl class="row" style="padding-left:50px;margin:30px 0">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input asp-for="Id" class="form-control" hidden />
        <input asp-for="Username" class="form-control" hidden />
        <input type="submit" value="Xóa" class="btn btn-danger" />
    </form>

</div>
